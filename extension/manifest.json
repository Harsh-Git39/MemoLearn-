{
  "manifest_version": 3,
  "name": "MemoLearn",
  "version": "2.0.0",
  "description": "Remember your search queries and answers - Now with popup management!",
  
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "contextMenus",
    "notifications"
  ],
  
  "host_permissions": [
    "https://www.google.com/*",
    "https://www.bing.com/*",
    "http://localhost:3000/*",
    "<all_urls>"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon128.png",
      "48": "icons/icon128.png",
      "128": "icons/icon128.png"
    },
    "default_title": "MemoLearn - View Saved Queries"
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["popup.css"],
      "run_at": "document_end"
    }
  ],
  
  "icons": {
    "16": "icons/icon128.png",
    "48": "icons/icon128.png",
    "128": "icons/icon128.png"
  }
}